<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ModularCMS.Launcher"
             xmlns:components="clr-namespace:ModularCMS.Launcher.Components"
             x:Class="ModularCMS.Launcher.MainPage"
             Title="Community Manager">
    
    <BlazorWebView x:Name="blazorWebView" HostPage="wwwroot/index.html">
        <BlazorWebView.RootComponents>
            <RootComponent Selector="#app" ComponentType="{x:Type components:AppShell}" />
        </BlazorWebView.RootComponents>
    </BlazorWebView>
</ContentPage>